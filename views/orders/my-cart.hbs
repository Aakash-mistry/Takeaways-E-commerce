{{#if products}}
<div class="container" style="margin-top: 50px; margin-bottom: 50px;">
     <div class="row">
          <div class=" col s12 l8">
               <div class="cartBox">
                    <h5>My cart ({{totalQty}})</h5>
                    <hr>
                    {{#each products}}
                    <div class="row  white" style="padding: 5px!important; margin-top: 20px!important">
                         <div class="col s12 l3">
                              <img src="{{this.item.image1}}" class="responsive-img" width="100" alt="">
                         </div>
                         <div class="col s12 l9 left-align">
                              <div class="cart-title">
                                   {{this.item.title}}
                              </div>
                              <div class=" right">
                                   <span class="cart-product-price grey-text text-darken-2">₹ {{this.item.realPrice}} /-</span>
                                   &emsp;
                                   <strike class="grey-text text-lighten strike-price">₹ {{this.item.fakePrice}} /-</strike>
                              </div>
                              <div class="row" style="margin-top: 30px!important; margin-bottom: 30px!important;">
                                    <div class="col s4 l2 center-align">
                                        <a href="/remove-from-cart/{{this.item._id}}" class="btn theme-blue btn-floating">
                                             <i class="material-icons white-text">remove</i>
                                        </a>
                                   </div>
                                   <div class="col s4 l1 center">
                                        <span class="single-product-qty" id="qty">
                                             {{this.qty}}
                                        </span>
                                   </div>
                                   <div class="col s4 l2 center-align">
                                        <a href="/add-by-one-cart/{{this.item._id}}" class="btn theme-blue btn-floating">
                                             <i class="material-icons white-text">add</i>
                                        </a>
                                   </div>
                              </div>
                         </div>
                    </div>
                    {{/each}}
               </div>
          </div>
          <div class=" col s12 l4">
               <div class=" cartBox">
                    <h6 style="font-weight: 700;" class="left grey-text">PRICE DETAILS</h6>
                    <div class="row" style="margin-top: 50px!important; margin-bottom: 30px!important;">
                         <div class="col s6 left">
                              Price ({{this.totalQty}} items)
                         </div>
                         <div class="col s6 right cart-price-amount">
                              ₹ {{this.totalPrice}} /-
                         </div>
                    </div>
                     <div class="row" style="margin-top: 30px!important; margin-bottom: 30px!important;">
                         <div class="col s6 left">
                              Delivery charges
                         </div>
                         <div class="col s6 right blue-text">
                              ₹ 50 /-
                         </div>
                    </div>
                    <hr>
                    <div style="padding: 10px;">
                         <h6>Your checkout price <span class="theme-blue-text"> ₹ {{this.totalPrice}} /-</span></h6>
                    </div>
               </div>
                <div style="margin-top: 20px!important;" class=" row">
                    <a href="/checkout" class="btn col s12 orange darken-3 btn-large z-depth-1-half">PLACE ORDER</a>
               </div>
          </div>
     </div>
</div>
{{else}}
<div class="white container">
     <div class="center cart_page">
          <img src="/images/svg/empty_cart.svg" class="responsive-img" width="400" alt="">
          <div class="center">
               <h5>
                    Missing cart items...?
               </h5>
          </div>
          <div class="center row">
               <div class="col s12 l3 offset-l3" style="margin-top: 20px;">
                    <a href="/login" class="btn btn-large theme-blue waves-effect waves-light">
                         Login to your account
                    </a>
               </div>
               <div class="col s12 l3" style="margin-top: 20px;">
                    <a href="/" class="btn btn-large orange darken-3 waves-effect waves-light">
                         Shop now - homepage
                    </a>
               </div>
          </div>
     </div>
</div>
{{/if}}