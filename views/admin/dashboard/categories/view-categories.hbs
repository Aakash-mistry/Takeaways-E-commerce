{{#if categoryLength}}
<div class="admin-heading-2 center-align">
     {{categoryLength}} tags is uploaded by now
</div>
<p class="center" style="text-transform: capitalize;">Take data id from view taglist / edit taglist form</p>
<div class="container">
     <div class="row" style="margin-top: 100px; margin-bottom: 100px!important;">
          <div class="col s12 m12 " style="padding: 20px;">
               {{!-- category data table --}}
                    <div class="row">
                         <div id="man" class="col s12">
                         <div class="card material-table z-depth-0">
                              <div class="table-header">
                              <span class="table-title "><i class="material-icons left">tag</i> Tags</span>
                              <div class="actions center">
                                   <a href="/admin/create-taglist" class="waves-effect btn admin-blue-background">
                                        <i class="material-icons white-text">add_box</i>
                                   </a>
                                   <a href="#" class="search-toggle waves-effect  btn-flat nopadding"><i class="material-icons admin-blue-text left">search</i> Search categories</a>
                              </div>
                              </div>
                              <table id="datatable" class="responsive-table centered">
                              <thead >
                                   <tr>
                                        <th class="admin-blue-text">DATA ID</th>
                                        <th class="admin-blue-text">CATEGORIES NAME</th>
                                        <th class="admin-blue-text">CATEGORIES DESCRIPTION</th>
                                        <th class="admin-blue-text">CREATED DATE</th>
                                        <th class="admin-blue-text">UPDATED DATE</th>
                                        <th class="admin-blue-text">ACTION</th>
                                   </tr>
                              </thead>
                              <tbody>
                                   {{#each category}}
                                   <tr>
                                        <td>{{this._id}}</td>
                                        <td>{{this.name}}</td>
                                        <td>{{this.description}}</td>
                                        <td>{{this.createdAt}}</td>
                                        <td>{{this.updatedAt}}</td>
                                          <td>
                                             <div class="row">
                                                  <div class="col s6">
                                                       <form action="/admin/delete_category/{{this._id}}" method="POST">
                                                            <button class="btn transparent tooltipped"  data-position="bottom" data-tooltip="Delete Tag"><i class="material-icons red-text delete-icon" style="font: 25px;">delete</i></button>
                                                       </form>
                                                  </div>
                                                  <div class="col s6">
                                                       <a href="/admin/category-edit/{{this._id}}" class="green-text btn transparent">
                                                            <i class="material-icons green-text">edit</i>
                                                       </a>
                                                  </div>
                                             </div>
                                        </td>

                                   </tr>
                                   {{/each}}
                              </tbody>
                              </table>
                         </div>
                         </div>
                    </div>
               {{!-- category data table ends --}}
          </div>
     </div>
</div>
{{else}}
<div class="admin-heading-2">
     No category uploaded
</div>
<div class="center" style="margin-bottom: 50px;">
     <a href="/admin/create-taglist" class="btn admin-blue-background">
          Create first category
     </a>
</div>
{{/if}}