<div class="container">
     <div class="row">
     <div class="col s12 l6 center">
          <div class="admin-heading-2">
               <span>
                    <a href="/admin/view-taglist">
                    <i class="material-icons left" style="margin-top: 8px; font-size: 35px;">keyboard_backspace</i>
                    </a>
               </span>
               Edit {{category.name}}
          </div>
     </div>
     <div class="col s12 l6">
          <div class="edit-category-form">
               <div class="row">
                    <form class="col s12" action="/admin/edit-taglist/{{category._id}}" method="POST">
                          <div class="admin-blue-background center white-text" style="padding: 10px; margin-bottom: 30px">
                               Change directly taglist
                         </div>
                         <div class="row">
                              <div class="input-field col s12">
                                   <input id="tag_name" name="taglist_name" value="{{category._id}}" type="text" class="validate" required>
                                   <label for="tag_name">Taglist data id</label>
                              </div>
                         </div>
                         <div class="row">
                              <div class="input-field col s12">
                                   <input id="tag_name" name="taglist_name" value="{{category.name}}" type="text" class="validate" required>
                                   <label for="tag_name">Taglist Name</label>
                              </div>
                         </div>
                          <div class="row">
                              <div class="input-field col s12">
                                   <input id="tag_name" name="taglist_description" value="{{category.description}}" type="text" class="validate" required>
                                   <label for="tag_name">Taglist Description</label>
                              </div>
                         </div>
                         <div class="row">
                              <div class="input-field">
                                   <button type="submit" class="btn col s12 admin-blue-background">
                                        update {{category.name}} taglist
                                   </button>
                              </div>
                         </div>
                    </form>
               </div>
          </div>
     </div>
</div>
</div>