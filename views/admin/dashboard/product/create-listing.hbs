                              <input type="number" name="imageWidthTwo" id="">
                              <label for="width">Enter image width</label>
                         </div>
                         <div class="input-field col s12 l7">
                         <p id="uploadLabel2"></p>
                         <img src="" id="imgTag2" class="responsive-img materialboxed" alt="">
                         </div>
                    </div>
                    <div class="row">
                         {{!-- Third image file uplaod --}}
                         <div class="input-field file-field col s6 l3">
                              <div class="btn transparent black-text admin-blue-background">
                                   <span><i class="fa fa-file-image-o"></i></span>
                                   <input type="hidden" name="photo3" id="productImageUrl3">
                                   <input type="file" id="imagePath3">
                              </div>
                              <div class="file-path-wrapper">
                                   <input type="text" placeholder="Upload image Three" class="file-path validate" id="">
                              </div>
                         </div>
                         <div class="input-field col s6 l2">
                              <input type="number" name="imageWidthThree" id="">
                              <label for="width">Enter image width</label>
                         </div>
                         <div class="input-field col s12 l7">
                              <p id="uploadLabel3"></p>
                              <img src="" id="imgTag3" class="responsive-img materialboxed" alt="">
                         </div>
                    </div>
               </div>
               <div class="row">
                    <div class="input-field">
                         <button type="submit" class="btn col s12 admin-blue-background">
                              Upload
                         </button>
                    </div>
               </div>
          </form>
